<resources>
    <declare-styleable name="AmountInput">
        <attr name="withTypeSwitch" format="boolean" />
        <attr name="withCurrencySelection" format="boolean" />
        <attr name="withExchangeRate" format="boolean" />
        <attr name="alternateLayout" format="boolean" />
        <!-- When this value changes, the downstream dependency's value is updated (value * exchange rate).
            When the downStreamDependency's value changes, the exchange rate is updated. -->
        <attr name="downStreamDependency" format="reference" />
        <!-- When the upStreamDependency's value changes, this value is updated (upStreamDependency * exchange rate).
            When this value changes, the exchange rate is updated. -->
        <attr name="upStreamDependency" format="reference" />
        <attr name="purpose" format="string" />
    </declare-styleable>
    <declare-styleable name="EditNumberPreference">
        <attr name="min" format="integer" />
        <attr name="android:max" />
    </declare-styleable>

    <declare-styleable name="FloatSeekBarPreference">
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="valueSpacing" format="float"/>
        <attr name="format" format="string"/>
    </declare-styleable>

    <attr name="widgetLine1" format="string" />
    <attr name="widgetNote" format="string" />
    <attr name="colorIncome" format="color" />
    <attr name="colorExpense" format="color" />
    <attr name="widgetCommand1" format="reference" />
    <attr name="widgetCommand2" format="reference" />
</resources>